<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ListView
        android:id="@+id/dialog_select_device_lvDeviceType"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/dialog_select_device_llSearching"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_select_device_lvDeviceType"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/dialog_select_device_txtvSearching"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Searching.. "
            android:textSize="24sp" />

        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/dialog_select_device_txtvSearching" />
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_select_device_txtvCardReaders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Readers"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dialog_select_device_llSearching"/>

    <ListView
        android:id="@+id/dialog_select_device_lvDevicesFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_select_device_txtvCardReaders" />

</RelativeLayout>
